<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/feedback"
    android:orientation="vertical"
    android:visibility="visible">


    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ratingBar2"
        android:layout_alignStart="@+id/ratingBar2"
        android:layout_below="@+id/ratingBar"
        android:layout_marginTop="35dp"
        android:text="how is our foods ?"
        android:textColor="@color/black" />

    <RelativeLayout
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/holo_red_light">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Feedback"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />




    </RelativeLayout>
    <RatingBar
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:progressTint="@color/yellow_500"
        android:secondaryProgressTint="@color/yellow_500"
        android:progressBackgroundTint="@color/grey_300"


        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="how is our service ?"
        android:textColor="@color/black"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/ratingBar"
        android:layout_alignStart="@+id/ratingBar" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="how is our foods ?"
        android:textColor="@color/black"
        android:layout_below="@+id/ratingBar"
        android:layout_alignLeft="@+id/ratingBar2"
        android:layout_alignStart="@+id/ratingBar2" />

    <RatingBar
        android:id="@+id/ratingBar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:progressTint="@color/yellow_500"
        android:secondaryProgressTint="@color/yellow_500"
        android:progressBackgroundTint="@color/grey_300"
        android:layout_below="@+id/textView8"
        android:layout_alignLeft="@+id/ratingBar"
        android:layout_alignStart="@+id/ratingBar" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ratingBar2"
        android:layout_alignStart="@+id/ratingBar2"
        android:layout_below="@+id/ratingBar2"
        android:layout_marginTop="52dp"
        android:text="How is comunication with our members?"
        android:textColor="@color/black" />

    <RatingBar
        android:id="@+id/ratingBar3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:progressTint="@color/yellow_500"
        android:secondaryProgressTint="@color/yellow_500"
        android:progressBackgroundTint="@color/grey_300"
        android:layout_below="@+id/textView9"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9" />

    <EditText
        android:id="@+id/addserv"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/rounded_outine_edittext"
        android:ems="10"
        android:inputType="textMultiLine"
        android:selectAllOnFocus="false"
        android:textColor="@color/blue_grey_700"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/ratingBar3"
        android:layout_alignStart="@+id/ratingBar3"
        android:layout_marginBottom="49dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comment(*optional)"
        android:textColor="@color/black"
        android:layout_above="@+id/addserv"
        android:layout_alignLeft="@+id/addserv"
        android:layout_alignStart="@+id/addserv"
        android:layout_marginBottom="11dp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/addserv"
        android:layout_toEndOf="@+id/ratingBar3"
        android:layout_toRightOf="@+id/ratingBar3"
        android:text="Submit"
        android:background="@android:color/holo_red_light"/>


</RelativeLayout>
